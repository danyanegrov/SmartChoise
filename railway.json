{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run railway-start",
    "buildCommand": "npm install",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "restartPolicy": "always",
    "numReplicas": 1
  }
}
