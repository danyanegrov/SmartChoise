# Railway Production Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/smartchoice_ai_prod"

# Security
SESSION_SECRET_KEY="your-super-secret-production-key-change-this-immediately"
JWT_SECRET="your-jwt-secret-key-for-production"

# CORS Origins
ALLOWED_ORIGINS="https://your-domain.railway.app,https://smartchoice-ai.railway.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Service Keys (if needed)
OPENAI_API_KEY=""
PERPLEXITY_API_KEY=""

# Redis (for caching)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

